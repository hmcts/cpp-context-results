{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/hearing/courts/hearing-financial-results-tracked.json",
  "type": "object",
  "properties": {
    "hearingFinancialResultRequest": {
      "$ref": "#/definitions/hearingFinancialResultRequest"
    },
    "createdTime": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false,
  "required": [
    "hearingFinancialResultRequest",
    "createdTime"
  ],
  "definitions": {
    "hearingFinancialResultRequest": {
      "type": "object",
      "properties": {
        "hearingId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "prosecutionCaseReferences": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "hearingSittingDay": {
          "type": "string",
          "format": "date-time"
        },
        "hearingCourtCentreName": {
          "type": "string"
        },
        "masterDefendantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "defendantName": {
          "type": "string"
        },
        "defendantDateOfBirth": {
          "type": "string",
          "format": "date"
        },
        "defendantAddress": {
          "type": "string"
        },
        "defendantEmail": {
          "type": "string",
          "format": "email"
        },
        "defendantContactNumber": {
          "type": "string"
        },
        "isSJPHearing": {
          "type": "boolean"
        },
        "ncesEmail": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/email"
        },
        "accountCorrelationId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "accountDivisionCode": {
          "type": "string"
        },
        "accountNumber": {
          "type": "string"
        },
        "offenceResults": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/offenceResult"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "hearingId",
        "masterDefendantId",
        "defendantName",
        "offenceResults"
      ]
    },
    "offenceResult": {
      "type": "object",
      "properties": {
        "resultId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "offenceId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "amendmentReason": {
          "type": "string"
        },
        "amendmentDate": {
          "type": "string"
        },
        "isDeemedServed": {
          "type": "boolean"
        },
        "isFinancial": {
          "type": "boolean"
        },
        "resultCode": {
          "type": "string"
        },
        "impositionOffenceDetails": {
          "type": "string"
        },
        "offenceTitle": {
          "type": "string"
        },
        "dateOfResult": {
          "type": "string"
        },
        "applicationType": {
          "type": "string"
        },
        "applicationResultType": {
          "type": "string"
        },
        "isParentFlag": {
          "type": "boolean"
        },
        "applicationId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "applicationTitle": {
          "type": "string"
        }
      }
    }
  }
}