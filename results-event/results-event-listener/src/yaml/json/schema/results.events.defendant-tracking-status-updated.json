{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/results/courts/results.events.defendant-tracking-status-updated.json",
  "type": "object",
  "properties": {
    "defendantId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "trackingStatus": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "offenceId": {
            "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
          },
          "emStatus": {
            "type": "boolean"
          },
          "emLastModifiedTime": {
            "type": "string",
            "format": "date-time"
          },
          "woaStatus": {
            "type": "boolean"
          },
          "woaLastModifiedTime": {
            "type": "string",
            "format": "date-time"
          }
        },
        "oneOf": [
          {
            "required": [
              "offenceId",
              "emStatus",
              "emLastModifiedTime"
            ]
          },
          {
            "required": [
              "offenceId",
              "woaStatus",
              "woaLastModifiedTime"
            ]
          }
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "defendantId",
    "trackingStatus"
  ],
  "additionalProperties": false
}