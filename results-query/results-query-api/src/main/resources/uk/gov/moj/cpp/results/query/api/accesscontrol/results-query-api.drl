package uk.gov.moj.cpp.results.query.api.accesscontrol;

import static uk.gov.moj.cpp.results.query.api.accesscontrol.UserGroupType.*;

import uk.gov.moj.cpp.accesscontrol.drools.Outcome;
import uk.gov.moj.cpp.accesscontrol.drools.Action;
import java.util.Arrays;

global uk.gov.moj.cpp.accesscontrol.common.providers.UserAndGroupProvider userAndGroupProvider;

rule "Query - API - results.get-person-details"
  when
    $outcome: Outcome();
    $action: Action(name == "results.get-person-details");
    eval(userAndGroupProvider.isMemberOfAnyOfTheSuppliedGroups($action, personDetailsGroups()));

  then
    $outcome.setSuccess(true);
end

