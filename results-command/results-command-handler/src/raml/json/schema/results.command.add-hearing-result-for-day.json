{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/hearing/courts/results.command.add-hearing-result-for-day.json",
  "type": "object",
  "properties": {
    "hearing": {
      "$ref": "http://justice.gov.uk/core/courts/hearing.json#"
    },
    "sharedTime": {
      "format": "date-time"
    },
    "shadowListedOffences": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
      }
    },
    "hearingDay": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "isReshare": {
      "type": "boolean"
    }
  },
  "required": [
    "hearing",
    "sharedTime",
    "hearingDay",
    "isReshare"
  ],
  "additionalProperties": false
}