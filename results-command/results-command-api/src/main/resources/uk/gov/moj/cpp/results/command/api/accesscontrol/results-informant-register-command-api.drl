package uk.gov.moj.cpp.results.command.api.accesscontrol;

import uk.gov.moj.cpp.accesscontrol.drools.Outcome;
import uk.gov.moj.cpp.accesscontrol.drools.Action;
global uk.gov.moj.cpp.accesscontrol.common.providers.UserAndGroupProvider userAndGroupProvider;

rule "Command - add informant register request"
  when
    $outcome: Outcome();
    $action: Action(name == "results.add-informant-register");
    eval(userAndGroupProvider.isMemberOfAnyOfTheSuppliedGroups($action, "Legal Advisers","Listing Officers" ,"Court Clerks", "Crown Court Admin", "Court Administrators", "System Users", "Defence Users", "District Judge", "Court Associate", "Probation Admin", "Second Line Support", "Magistrates"))
  then
    $outcome.setSuccess(true);
  end

rule "Command - generate informant register by date"
  when
    $outcome: Outcome();
    $action: Action(name == "results.generate-informant-register-by-date");
    eval(userAndGroupProvider.isMemberOfAnyOfTheSuppliedGroups($action, "Legal Advisers","Listing Officers" ,"Court Clerks", "Crown Court Admin", "Court Administrators", "System Users", "Defence Users", "District Judge", "Court Associate", "Probation Admin", "Second Line Support"))
  then
    $outcome.setSuccess(true);
  end

rule "Command - Rule for request for generating informant register document"
  when
    $outcome: Outcome();
    $action: Action(name == "results.generate-informant-register");
    eval(userAndGroupProvider.isMemberOfAnyOfTheSuppliedGroups($action, "System Users"));
  then
    $outcome.setSuccess(true);
  end