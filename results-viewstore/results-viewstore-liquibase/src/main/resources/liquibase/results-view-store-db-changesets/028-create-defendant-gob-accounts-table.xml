<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="1" author="cpp.context.results" logicalFilePath="028-create-defendant-gob-accounts-table.xml">
        <createTable tableName="defendant_gob_accounts">
            <column name="id" type="uuid"/>
            <column name="master_defendant_id" type="uuid"/>
            <column name="correlation_id" type="uuid"/>
            <column name="account_number" type="text"/>
            <column name="case_references" type="text"/>
            <column name="created_date_time" type="DATETIME"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="cpp.context.results" logicalFilePath="028-create-defendant-gob-accounts-table.xml">
        <addPrimaryKey tableName="defendant_gob_accounts" columnNames="id"
                       constraintName="defendant_gob_accounts_pk"/>
    </changeSet>

    <changeSet id="3" author="cpp.context.results" logicalFilePath="028-create-defendant-gob-accounts-table.xml">
        <sql>
            CREATE INDEX IF NOT EXISTS defendant_gob_accounts_master_defendant_id_idx ON defendant_gob_accounts (master_defendant_id);
        </sql>
    </changeSet>
</databaseChangeLog>
