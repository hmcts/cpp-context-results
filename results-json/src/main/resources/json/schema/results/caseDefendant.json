{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/caseDefendant.json",
  "type": "object",
  "properties": {
    "defendantId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "prosecutorReference": {
      "type": "string"
    },
    "associatedPerson": {
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/associatedIndividual.json"
      }
    },
    "offences": {
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/offenceDetails.json"
      }
    },
    "judicialResults": {
      "description": "A record of any judicial decisions and results made against the offence",
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/judicialResult.json"
      }
    },
    "pncId": {
      "type": "string"
    },
    "attendanceDays": {
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/attendanceDay.json"
      }
    }
  },
  "additionalProperties": true,
  "required": [
    "defendantId",
    "prosecutorReference",
    "offences"
  ],
  "oneOf": [
    {
      "properties": {
        "individualDefendant": {
          "$ref": "http://justice.gov.uk/core/courts/individualDefendant.json"
        }
      },
      "required": [
        "individualDefendant"
      ]
    },
    {
      "properties": {
        "corporateDefendant": {
          "$ref": "http://justice.gov.uk/core/courts/organisationDetails.json"
        }
      },
      "required": [
        "corporateDefendant"
      ]
    }
  ]
}
