{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/core/courtDocument.json",
  "type": "object",
  "properties": {
    "courtDocumentId": {
      "description": "The technical identifier of a document",
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
    },
    "documentCategory": {
      "type": "object",
      "anyOf": [
        {
          "caseDocument": {
            "type": "object",
            "properties": {
              "prosecutionCaseId": {
                "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
              }
            },
            "required": [
              "prosecutionCaseId"
            ]
          }
        },
        {
          "applicationDocument": {
            "type": "object",
            "properties": {
              "applicationId": {
                "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
              },
              "prosecutionCaseId": {
                "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
              },
              "defendants": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
                }
              }
            },
            "required": [
              "applicationId"
            ]
          }
        },
        {
          "defendantDocument": {
            "type": "object",
            "properties": {
              "prosecutionCaseId": {
                "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
              },
              "defendants": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
                }
              }
            },
            "required": [
              "defendants",
              "prosecutionCaseId"
            ]
          }
        },
        {
          "nowDocument": {
            "type": "object",
            "properties": {
              "defendantId": {
                "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
              },
              "orderHearingId": {
                "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
              },
              "prosecutionCases": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
                }
              }
            },
            "required": [
              "defendantId",
              "orderHearingId",
              "prosecutionCases"
            ]
          }
        }
      ]
    },
    "name": {
      "type": "string"
    },
    "documentTypeId": {
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
    },
    "documentTypeDescription": {
      "type": "string"
    },
    "mimeType": {
      "type": "string"
    },
    "isRemoved": {
      "type": "boolean"
    },
    "materials": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/core/material.json"
      }
    }
  },
  "required": [
    "courtDocumentId",
    "name",
    "documentTypeId",
    "mimeType",
    "materials"
  ],
  "additionalProperties": false
}