{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/core/prosecutionCase.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
    },
    "prosecutionCaseIdentifier": {
      "$ref": "http://justice.gov.uk/json/schemas/core/prosecutionCaseIdentifier.json"
    },
    "originatingOrganisation": {
      "type": "string"
    },
    "initiationCode": {
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/initiationCode"
    },
    "caseStatus": {
      "description": "The status of the case.  When SJP Referrals are received this will be set to SJPReferral by the receiving Progression API ",
      "type": "string"
    },
    "statementOfFacts": {
      "type": "string"
    },
    "statementOfFactsWelsh": {
      "type": "string"
    },
    "defendants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/core/defendant.json"
      }
    }
  },
  "required": [
    "id",
    "prosecutionCaseIdentifier",
    "initiationCode",
    "defendants"
  ],
  "additionalProperties": false
}