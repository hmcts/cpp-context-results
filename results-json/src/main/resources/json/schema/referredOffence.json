{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://justice.gov.uk/core/courts/referredOffence.json",
	"type": "object",
	"properties": {
		"id": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
		},
		"offenceDefinitionId": {
			"description": "The identifier of the offence from reference data",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
		},
		"wording": {
			"type": "string"
		},
		"wordingWelsh": {
			"type": "string"
		},
		"startDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
		},
		"endDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
		},
		"arrestDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
		},
		"chargeDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
		},
		"orderIndex": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/positiveInteger"
		},
		"count": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/positiveInteger"
		},
		"convictionDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
		},
		"notifiedPlea": {
          "$ref": "http://justice.gov.uk/core/courts/notifiedPlea.json"
		},
		"offenceFacts": {
          "$ref": "http://justice.gov.uk/core/courts/offenceFacts.json"
		}
	},
	"required": [
		"id",
		"offenceDefinitionId",
		"wording",
		"startDate",
        "orderIndex",
        "count"
	],
	"additionalProperties": false
}