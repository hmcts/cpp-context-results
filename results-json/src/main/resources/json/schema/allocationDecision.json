{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://justice.gov.uk/core/courts/allocationDecision.json",
	"description": "The allocation decision made regarding the jurisdiction required or elected for dealing with the offence in question and based on the indicated plea",
	"type": "object",
	"properties": {
		"courtDecision": {
			"type": "string",
			"enum": [
				"CONSENT_SUMMARY_TRIAL",
				"ELECT_TRIAL_ON_INDICTMENT",
				"INDICTABLE_ONLY_LINKED_TO_INDICTABLE"
			]
		},
		"prosecutionRepresentation": {
      "description": "Prosecution Representation",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/prosecutionRepresentation"
		},
		"defendantRepresentation": {
      "description": "Defendant Representation",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/defendantRepresentation"
		},
		"indicationOfSentence": {
			"description": "When a court decision is made the indication of possible sentence based on the allocation decision",
			"type": "string"
		}
	},
	"required": [
		"courtDecision"
	],
	"additionalProperties": false
}