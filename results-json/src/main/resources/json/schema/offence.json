{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/core/offence.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
    },
    "offenceDefinitionId": {
      "description": "The identifier of the offence from reference data",
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
    },
    "offenceCode": {
      "type": "string"
    },
    "offenceTitle": {
      "type": "string"
    },
    "offenceTitleWelsh": {
      "type": "string"
    },
    "offenceLegislation": {
      "type": "string"
    },
    "offenceLegislationWelsh": {
      "type": "string"
    },
    "modeOfTrial": {
        "type": "string"
    },
    "wording": {
      "type": "string"
    },
    "wordingWelsh": {
      "type": "string"
    },
    "startDate": {
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/datePattern"
    },
    "endDate": {
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/datePattern"
    },
    "arrestDate": {
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/datePattern"
    },
    "chargeDate": {
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/datePattern"
    },
    "orderIndex": {
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/positiveInteger"
    },
    "count": {
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/positiveInteger"
    },
    "convictionDate": {
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/datePattern"
    },
    "notifiedPlea": {
      "$ref": "http://justice.gov.uk/json/schemas/core/notifiedPlea.json"
    },
    "indicatedPlea": {
      "$ref": "http://justice.gov.uk/json/schemas/core/indicatedPlea.json"
    },
    "plea": {
      "$ref": "http://justice.gov.uk/json/schemas/core/plea.json"
    },
    "offenceFacts": {
      "$ref": "http://justice.gov.uk/json/schemas/core/offenceFacts.json"
    },
    "verdict": {
      "$ref": "http://justice.gov.uk/json/schemas/core/verdict.json"
    }
  },
  "required": [
    "id",
    "offenceDefinitionId",
    "offenceCode",
    "wording",
    "startDate",
    "orderIndex",
    "count"
  ],
  "additionalProperties": false
}