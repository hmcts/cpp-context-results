{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/nowType.json",
  "description": "The type of now i.e. the reference data for an instance of a NOW",
  "type": "object",
  "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "templateName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "rank": {
          "type": "integer"
        },
        "staticText": {
          "type": "string"
        },
        "welshStaticText": {
          "type": "string"
        },
        "priority": {
          "type": "string"
        },
        "jurisdiction": {
          "type": "string"
        },
        "requiresBulkPrinting": {
          "type": "boolean"
        },
        "requiresEnforcement": {
          "type": "boolean"
        }
      },
      "required": [
        "id",
        "templateName",
        "description",
        "rank",
        "jurisdiction",
        "requiresBulkPrinting",
        "requiresEnforcement"
      ],
      "additionalProperties": false
}