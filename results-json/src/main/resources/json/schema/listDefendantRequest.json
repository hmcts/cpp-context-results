{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/core/listDefendantRequest.json",
  "type": "object",
  "properties": {
    "datesToAvoid": {
      "type": "string"
    },
    "referralReason": {
      "type": "string"
    },
    "summonsRequired": {
      "type": "boolean"
    },
    "defendantId": {
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
    },
    "hearingLanguageNeeds": {
      "description": "The defendants hearing needs.  Indicates the defendants preference for the hearing to be conducted in non English",
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/hearingLanguage"
    },
    "defendantOffences": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
      }
    }
  },
  "required": [
    "defendantId",
    "summonsRequired",
    "referralReason"
  ],
  "additionalProperties": false
}