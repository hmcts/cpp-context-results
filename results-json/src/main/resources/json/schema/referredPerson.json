{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/referredPerson.json",
  "type": "object",
  "properties": {
    "title": {
      "description": "The person title",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/personTitle"
    },
    "firstName": {
      "description": "The person fore name",
      "type": "string"
    },
    "middleName": {
      "description": "The person middle name",
      "type": "string"
    },
    "lastName": {
      "description": "The person last name",
      "type": "string"
    },
    "dateOfBirth": {
      "description": "The person date of birth",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "nationalityId": {
      "description": "The person nationality identifier from reference data",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "additionalNationalityId": {
      "description": "The person nationality identifier from reference data",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "disabilityStatus": {
      "description": "The person disability status",
      "type": "string"
    },
    "ethnicityId": {
      "description": "The person ethnicity identifier",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "gender": {
      "description": "The person gender",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/gender"
    },
    "interpreterLanguageNeeds": {
      "description": "The person interpreter needs",
      "type": "string"
    },
    "documentationLanguageNeeds": {
      "description": "The person documentation needs.  Indicates the requirement for documentation to be published in non English",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/hearingLanguage"
    },
    "nationalInsuranceNumber": {
      "description": "The person nino",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/nino"
    },
    "occupation": {
      "description": "The person occupation",
      "type": "string"
    },
    "occupationCode": {
      "description": "The person occupation code",
      "type": "string"
    },
    "specificRequirements": {
      "description": "The person special needs indicted any special needs that must be met by the courts process e.g. wheelchair access",
      "type": "string"
    },
    "address": {
      "description": "The person address details",
      "$ref": "http://justice.gov.uk/core/courts/address.json"
    },
    "contact": {
      "description": "The person contact details",
      "$ref": "http://justice.gov.uk/core/courts/contactNumber.json"
    }
  },
  "required": [
    "lastName",
    "gender"
  ],
  "additionalProperties": false
}