{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/confirmedDefendant.json",
  "type": "object",
  "description": "A confirmed defendant is a defendant that is listed in a hearing that has been confirmed",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "offences": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/confirmedOffence.json#"
      }
    }
  },
  "required": [
    "id",
    "offences"
  ],
  "additionalProperties": false
}