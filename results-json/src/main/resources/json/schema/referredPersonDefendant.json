{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/referredPersonDefendant.json",
  "type": "object",
  "properties": {
    "personDetails": {
      "$ref": "http://justice.gov.uk/core/courts/referredPerson.json"
    },
    "bailStatus": {
      "description": "The defendant bail status for the given case",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/bailStatus"
    },
    "custodyTimeLimit": {
      "description": "The custody time limit for the given case when the bail status is remanded-in-custody",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "perceivedBirthYear": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/positiveInteger"
    },
    "observedEthnicityId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "selfDefinedEthnicityId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "driverNumber": {
      "type": "string"
    },
    "pncId": {
      "type": "string"
    },
    "arrestSummonsNumber": {
      "type": "string"
    },
    "aliases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "employerOrganisation": {
      "$ref": "http://justice.gov.uk/core/courts/organisation.json"
    },
    "employerPayrollReference": {
      "type": "string"
    }
  },
  "required": [
    "personDetails"
  ],
  "additionalProperties": false
}