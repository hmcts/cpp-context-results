{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://justice.gov.uk/core/courts/nextHearing.json",
	"type": "object",
	"properties": {
		"type": {
			 "$ref": "http://justice.gov.uk/core/courts/hearingType.json"
		},
		"jurisdictionType": {
			 "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/jurisdictionType"
		},
		"reportingRestrictionReason": {
			"type": "string"
		},
		"hearingLanguage": {
			 "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/hearingLanguage"
		},
		"earliestStartDateTime": {
			"description": "The date before which a hearing must NOT be listed",
			 "type": "string",
			 "format": "date-time"
		},
		"estimatedMinutes": {
			 "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/positiveInteger"
		},
		"courtCentre": {
			 "$ref": "http://justice.gov.uk/core/courts/courtCentre.json"
		},
		"judiciary": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/judicialRole.json"
			}
		},
		"nextHearingProsecutionCases": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "http://justice.gov.uk/core/courts/nextHearingProsecutionCase.json"
			}
		}
	},
	 "required": [
		"type",
		"courtCentre",
		"estimatedMinutes",
		"earliestStartDateTime",
		"nextHearingProsecutionCases"
	],
	 "additionalProperties": false
}